<%- include ("partials/header")
%>

<header>
    <h1>Liveability</h1>
    <h5 id="tester"></h5>

    <form id="form">
      <input style="color: black;"
        type="text"
        id="search"
       />
      <button>Search</button>
    </form>
  </header>

<div class="container-flex-toggleFilter">
<button onclick="toggleFilterDisplay()" id="toggleFilter">apply filters</button></div>
<div  id ="toggle-sliders" class="off">
      <div class="form-group id="slider1">
      <div class="filterSliders">⛱️ Quality of Life: <span class="indexNo" id="ex1Val"></span></div>
      <input type="range" class="custom-range" min="0" max="100" step="1" id="ex1" value="100">
        </div>
        <div class="form-group" id="slider2">
          <div class="filterSliders">💳 Purchasing Power: <span class="indexNo" id="ex2Val"></span></div>
          <input type="range" class="custom-range" min="0" max="100" step="1" id="ex2" value="100">
        </div>
        <div class="form-group" id="slider3">
        <div class="filterSliders">💰 Cost of Living: <span class="indexNo" id="ex3Val"></span></div>
        <input type="range" class="custom-range" min="0" max="100" step="1" id="ex3" value="100">
      </div>
    <div class="form-group" id="slider4">
    <div class="filterSliders">🚓 Safety: <span class="indexNo" id="ex4Val"></span></div>
    <input type="range" class="custom-range" min="0" max="100" step="1" id="ex4" value="100">
      </div>
      <div class="form-group" id="slider5">
      <div class="filterSliders">⚕️ Health Care: <span class="indexNo" id="ex5Val"></span></div>
      <input type="range" class="custom-range" min="0" max="100" step="1" id="ex5" value="100">
    </div>
      <div class="form-group" id="slider6">
      <div class="filterSliders">🏠 Property Price Income Ratio: <span class="indexNo" id="ex6Val"></span></div>
      <input type="range" class="custom-range" min="0" max="50" step="1" id="ex6" value="50">
    </div>
  <div class="form-group" id="slider7">
  <div class="filterSliders">🚦 Traffic: <span class="indexNo" id="ex7Val"></span></div>
  <input type="range" class="custom-range" min="0" max="100" step="1" id="ex7" value="100">
    </div>
    <div class="form-group" id="slider8">
    <div class="filterSliders">🏭 Pollution: <span class="indexNo" id="ex8Val"></span></div>
    <input type="range" class="custom-range" min="0" max="100" step="1" id="ex8" value="100">
  </div>
    <div class="form-group" id="slider9">
    <div class="filterSliders">🌲 Climate: <span class="indexNo" id="ex9Val"></span></div>
    <input type="range" class="custom-range" min="0" max="100" step="1" id="ex9" value="100">
    </div>
  </div>
</div>

<div class="container-marinas">
    <div id="marina">

    </div>
</div>

<!-- Button trigger modal Put in header-->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tell us what we can improve</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action='/' method="POST" autocomplete="off">
      <div class="modal-body">
          <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name">
            <h6>we'll never share your email with anyone! </h6>
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email">
            <h6>we'll never share your email with anyone! </h6>
          </div>
          <div class="form-group">
            <label for="feature">Request:</label>
            <textarea type="text" class="form-control" id="feature" rows="10" name="feature"></textarea>
            <h6>we'll never share your email with anyone! </h6>
          </div>
          <button type="submit" class="btn btn-primary submit" value="Submit">Submit</button>
        </div>
        </form>
    </div>
  </div>
</div>

    <%- include ("partials/footer")
    %>

